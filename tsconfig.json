{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "src",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
